package Animation;

import java.util.HashMap;
import java.util.Map;

public class AnimationStateMachine {
	  private String currentState;
      private Map<String, AnimationState> stateMachine;
      
      AnimationStateMachine() {
    	  stateMachine = new HashMap<>();
      }
      
      public addState(String stateTag, List<Texture2D> frames) {
    	  if(stateMachine.get(stateTag) != null) {
    		  throw new StateCollisionException();
    	  }
    	  stateMachine.put(state, new AnimationState(state, new Animation(frames)));
      }
      
